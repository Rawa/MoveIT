<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:weightSum="7"
    android:baselineAligned="false" android:orientation="horizontal">
    <Button
        android:text="T"
        android:layout_width="match_parent"
        android:layout_weight="1" android:layout_height="wrap_content"
        android:id="@+id/monday" android:layout_gravity="left"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="weekday_toggle"
        android:textColor="@drawable/selector_txt"
        android:layout_alignParentLeft="true"
        />
    <Button android:text="T" android:layout_width="match_parent"
        android:layout_weight="1" android:layout_height="wrap_content"
        android:id="@+id/tuesday"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="weekday_toggle"
        android:textColor="@drawable/selector_txt"
        android:layout_toRightOf="@+id/monday"
        />
    <Button android:text="W" android:layout_width="match_parent"
        android:layout_weight="1" android:layout_height="wrap_content"
        android:id="@+id/wednesday"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="weekday_toggle"
        android:textColor="@drawable/selector_txt"
        android:layout_toRightOf="@+id/tuesday"
        />
    <Button android:text="T" android:layout_width="match_parent"
        android:layout_weight="1" android:layout_height="wrap_content"
        android:id="@+id/thursday"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="weekday_toggle"
        android:textColor="@drawable/selector_txt"
        android:layout_toRightOf="@+id/wednesday"
        />
    <Button android:text="F" android:layout_width="match_parent"
        android:layout_weight="1" android:layout_height="wrap_content"
        android:id="@+id/friday"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="weekday_toggle"
        android:textColor="@drawable/selector_txt"
        android:layout_toRightOf="@+id/thursday"
        />
    <Button android:text="S" android:layout_width="match_parent"
        android:layout_weight="1" android:layout_height="wrap_content"
        android:id="@+id/saturday"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="weekday_toggle"
        android:textColor="@drawable/selector_txt"
        android:layout_toRightOf="@+id/friday"
        />
    <Button android:text="S" android:layout_width="match_parent"
        android:layout_weight="1" android:layout_height="wrap_content"
        android:id="@+id/sunday"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="weekday_toggle"
        android:textColor="@drawable/selector_txt"
        android:layout_toRightOf="@+id/saturday"
        />
</LinearLayout>